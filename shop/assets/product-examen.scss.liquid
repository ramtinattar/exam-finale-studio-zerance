// accordin list product-description

$white: rgba(254,255,250,1);
$grey: #E0E0E0;
$red: rgba(255,104,115,1);
$black: rgba(48,69,92,0.8);
$sans: 'Titillium Web', sans-serif;

.product-examen__reassurance__accordion-list li {
    position: relative;
    padding: 0;
    margin: 0;
    border-top: 1px solid $grey;
    &:nth-of-type(1) {
      animation-delay: 0.5s;
    }
    &:nth-of-type(2) {
      animation-delay: 0.75s;
    }

    &:nth-of-type(3) {
      animation-delay: 1.0s;
    }

    &:last-of-type {
      padding-bottom: 0;
    }
    &:nth-child(1) {
      border-top: none;
    }
  }

.product-examen__reassurance__accordion-list i {
  position: absolute;
  transform: translate( -6px , 0 );
  margin-top: 20px;
  right: 0;
  &:before , &:after {
    content: "";
    @extend .transition;
    position: absolute;
    background-color: #BDBDBD;
    width: 1px;
    height: 13px;
  }
  &:before {
    transform: translate( 0px , 0 ) rotate( 90deg );
  }

  &:after {
    transform: translate( 0px , 0 ) rotate( -90deg );
  }
}


.product-examen__reassurance__accordion-list input[type=checkbox] {
  position: absolute;
  cursor: pointer;
  width: 100%;
  height: 100%;
  z-index: 1;
  opacity: 0;
  &:checked {
    &~p {
      margin-top: 0;
      max-height: 0;
      opacity: 0;
      transform: translate( 0 , 50% );
    }
    &~i {
      &:before {
        transform: translate( -2px , 0 ) rotate( 180deg );
      }
      &:after {
        transform: translate( -2px , 0 ) rotate( -90deg );
      }
    }
  }
}

